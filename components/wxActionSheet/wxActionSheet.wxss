/**分享弹窗**/
.actionSheet {
  width: 100%;
  height: 314rpx;
  background: #ffffff;
}

.actionSheet>.shareIcon {
  width: 100%;
  margin-top: 40rpx;
  color: #333333;
  letter-spacing: 1rpx;
  font-size: 24rpx;
  font-weight: bold;
  margin-bottom: 56rpx;
}

.actionSheet>.shareIcon>button>image {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 25rpx;
}

.actionSheet>.cancel {
  width: 100%;
  color: #999999;
  letter-spacing: 2rpx;
  font-size: 26rpx;
  text-align: center;

}

button {
  background: none;
  color: #333333;
  font-size: 24rpx;
  letter-spacing: 1rpx;
}

button::after {
  border: none;
}

.haiBao {
  padding: 234rpx 30rpx 0;
}

.haiBao>.haiBaoPic {
  width: 100%;
  height: 690rpx;
  position: relative;
  border-radius: 8rpx;
  overflow: hidden;
}

.haiBao>.haiBaoPic>image {
  width: 100%;
  height: 100%;
}

.haiBao>.haiBaoPic>image:last-child {
  width: 160rpx;
  height: 160rpx;
  position: absolute;
  bottom: 112rpx;
  right: 20rpx;
  border-radius: 50%;
}

.haiBao>.haiBaoHotel {
  width: 100%;
  background: #ffffff;
  border-radius: 8rpx;
  box-shadow: 0rpx 6rpx 20rpx 0rpx rgba(77, 0, 168, 0.06);
  padding: 26rpx 32rpx 36rpx;
  position: relative;
  top: -80rpx;
}

.haiBao>.haiBaoHotel>.name {
  font-size: 34rpx;
  color: #333333;
  font-weight: bold;
  letter-spacing: 1rpx;
  margin-bottom: 6rpx;
}

.haiBao>.haiBaoHotel>.EnglishName {
  font-size: 26rpx;
  color: #999999;
  margin: 14rpx 0 26rpx;
}

.haiBao>.haiBaoHotel>.address {
  font-size: 26rpx;
  color: #333333;
  margin-bottom: 20rpx;
}

.haiBao>.haiBaoHotel>.time {
  width: 100%;
  height: 84rpx;
  border-radius: 8rpx;
  background: #F8F8F8;
  padding-left: 30rpx;
  white-space: nowrap;
}

.haiBao>.haiBaoHotel>.time>view {
  color: #999999;
  font-size: 24rpx;
  margin-right: 106rpx;
  position: relative;
}

.haiBao>.haiBaoHotel>.time>view:last-child {
  margin-right: 0;
}

.haiBao>.haiBaoHotel>.time>view::after {
  content: '';
  width: 4rpx;
  height: 20rpx;
  background: #cccccc;
  position: absolute;
  right: -40rpx;
  top: 10rpx;
}

.haiBao>.haiBaoHotel>.time>view>text {
  font-family: DIN Alternate, DIN Alternate-Bold;
  font-size: 28rpx;
  color: #333333;
  letter-spacing: 1rpx;
  font-weight: bold;
}

.haiBao>.haibaoBtn {
  width: 100%;
  height: 84rpx;
  background: var(--buttonColor);
  font-size: 32rpx;
  color: #FFFFFF;
  letter-spacing: 2rpx;
  margin: 40rpx 0 30rpx;
}

.haiBao>.haibaoContent {

  color: #EEEEEE;
  letter-spacing: 2rpx;
  font-size: 26rpx;
}