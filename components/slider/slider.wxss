.container {
  /*height: 100%;*/
  width: 100%;
  position:relative;
  height: 52rpx;
}

.slider-body {
  height: 6rpx;
  background-color: #ddd;
  position: absolute;
}

.body {
  top: 50%;
  background-color: #810dd4;
  z-index: 0.3;
}

.left {
  top: 50%;
  z-index: 0.1;
}

.right {
  z-index: 0.2;
  top: 50%;
}

.slider-item {
  width: 52rpx;
  height: 52rpx;
  background: url("data:image/png;base64,") no-repeat;
  background-size: 100% 100%;
  z-index: 2;
  position: absolute;
  top: 0rpx;
}


