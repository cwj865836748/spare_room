/* components/AppealStatus/AppealStatus.wxss */

.customAppealTitle {
  padding: 36rpx 50rpx 0 52rpx;
  font-size: 32rpx;
  color: #333333;
  font-weight: bold;
  letter-spacing: 1rpx;
  position: relative;
}

.customAppealTitle>image {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  right: 28rpx;
  top: 26rpx;
}

.appealSize {
  font-size: 26rpx;
  color: #333333;
  letter-spacing: 2rpx;
}

.appealSize2 {
  font-size: 30rpx;
  color: #189500;
  letter-spacing: 2rpx;
  font-weight: bold;
}

.appealSize3 {
  font-size: 24rpx;
  color: #aaaaaa;
  letter-spacing: 1rpx;
  font-weight: bold;
}

.appealSize4 {
  font-size: 52rpx;
  font-weight: bold;
  font-family: DIN Alternate, DIN Alternate-Bold;
  color: #7001a1;
  letter-spacing: 2rpx;
}

.appealSize5 {
  color: #7001a1;
  letter-spacing: 1rpx;
  font-size: 24rpx;
  font-weight: bold;
}

.appealSize6 {
  font-size: 30rpx;
  color: #7101a0;
  letter-spacing: 2rpx;
}

.appealSize7 {
  font-size: 30rpx;
  color: #c12306;
  letter-spacing: 2rpx;
}

.appealSize8 {
  font-size: 26rpx;
  color: #c12306;
}

.appealSize9 {
  font-size: 28rpx;
  color: #c12306;
  margin-right: 44rpx;
  font-weight: bold;
}

.appealStatus {
  background: rgba(249, 249, 249, 0);
  height: 108rpx;
  padding: 0 30rpx 0 28rpx;
  border-bottom: 2rpx solid #f9f9f9;
}

.appealResult {
  padding: 40rpx 0 0;
}

.appealResult>.appealResultDetail {
  margin-top: 20rpx;
  border-radius: 8rpx;
  background: #FCF8FF;
  padding: 0rpx 30rpx;
}

.appealResultOne {
  padding: 20rpx 0;
  border-bottom: 2rpx solid #f9f9f9;
}

.appealResultOne:last-child {
  border-bottom: none;
}

.appealWhy {
  padding-top: 38rpx;
}

.appealWhy>.appealWhyDetail {
  padding: 28rpx 30rpx;

  background: #f9f9f9;
  border-radius: 8rpx;
  color: #333333;
  font-size: 26rpx
}

.appealWJ {
  padding: 34rpx 28rpx 40rpx;
}

.picList>.picDetail {
  width: 172rpx;
  height: 172rpx;
  margin-right: 24rpx;
  position: relative;
}

.picList>.picDetail:last-child {
  margin-right: 0;
}

.picList>.picDetail>image {
  width: 100%;
  height: 100%;
}

.appealNo {
  padding: 40rpx 28rpx 26rpx;
}