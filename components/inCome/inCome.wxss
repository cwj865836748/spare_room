/* components/inCome/inCome.wxss */
.recommendRecord {
  height: 88rpx;
  background: rgba(89, 14, 159, 0.07);
  padding: 0 28rpx;
  font-size: 24rpx;
  color: rgba(11, 0, 22, 0.4);
  letter-spacing: 1rpx;
 
}

.recommendRecord>view {
  font-size: 26rpx;
  color: rgba(11, 0, 22, 0.5);
  letter-spacing: 2rpx;
}

.recommendRecord>view>text:nth-child(2) {
  font-size: 26rpx;
  color: rgba(51, 51, 51, 0.5);
  letter-spacing: 2rpx;
}

.recommendOne {
  margin-bottom: 16rpx;
  height: 100rpx;
  background: rgba(249, 249, 249, 0.3);
  color: #333333;
  letter-spacing: 2rpx;
  font-size: 26rpx;
  padding: 0 28rpx;
  border-bottom: 2rpx solid #f9f9f9;
}

.recommendOne:last-child {
  margin-bottom: 0rpx;

}

.recommendOne>text:last-child {
  color: #7a0dcb;
  letter-spacing: 2rpx;
  font-size: 34rpx;
  font-weight: bold;
}
.greenSize {
  color: #189500;
  margin-left: 8rpx;
}
.redSize {
  color: #e63e3e;
  margin-left: 8rpx;
}
.blackSize {
  color: #333333 !important;
}