/* pages/authWx/authWx.wxss */
.authContent {
  padding: 100rpx 40rpx 0rpx;
}
.wxImage {
  padding-bottom: 80rpx;
  border-bottom: 1px solid #EEEEEE;
}
.wxImage>image {
  width: 200rpx;
  height: 200rpx;
}
.authSize {
  padding: 80rpx 0rpx;
  color: #333;
  font-size: 30rpx;
  letter-spacing: 2rpx;
  font-weight: bold;
}
.authSize>view {
  margin-top: 40rpx;
  color: #B4B2AF;
}
.wxButton {
  height: 80rpx;
  border-radius: 100rpx;
}