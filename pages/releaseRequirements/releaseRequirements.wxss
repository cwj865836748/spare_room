/* pages/releaseRequirements/releaseRequirements.wxss */
@import "/components/noData/noData.wxss";
.requireList {
  padding: 24rpx 30rpx;
  /* background: #F9F9F9; */
}

.requireOne {
  height: 246rpx;
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx 30rpx 40rpx;
  margin-bottom: 32rpx;
}

.requireOne:last-child {
  margin-bottom: 0;
}

.requireOne>.hotelName {
  color: #333333;
  letter-spacing: 1rpx;
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.requireOne>.hotelName>image {
  width: 48rpx;
  height: 48rpx;
  position: relative;
  top: 6rpx;
  right: 7rpx;
  min-width: 48rpx;

}

.requireOne>.hotelDate {
  color: #aaaaaa;
  letter-spacing: 1rpx;
  font-size: 26rpx;
}

.requireOne>.hotelType {
  color: #888888;
  letter-spacing: 1rpx;
  font-size: 26rpx;
  margin-top: 20rpx;
}

.mt40 {
  margin-top: 40rpx !important;
}

.requireOne>.hotelType>.hotelTypeBtn {
  width: 188rpx;
  height: 72rpx;
  background: #7a0dcb;
  border-radius: 8rpx;
  color: #ffffff;
  letter-spacing: 1rpx;
}

.requireOne>.hotelType>.noMessage {
  color: #aaaaaa;
  font-size: 24rpx;
}

.cancelCollect {
  padding: 20rpx 0 0;
}

.cancelCollect>.title {
  color: #333333;
  font-size: 32rpx;
  text-align: center;
}

.cancelCollect>.content {
  text-align: center;
  padding: 52rpx 0 70rpx;
  font-size: 28rpx;
  color: #666666;
  letter-spacing: 1rpx;
}

.actionRequire {
  background: #f9f9f9;
  padding: 22rpx 30rpx 0rpx;
  position: relative;
}

.actionRequire>.actionTitle {
  text-align: center;
  color: #333333;
  font-size: 32rpx;
  margin-bottom: 22rpx;
}

.actionRequire>.actionTitle>image {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  right: 32rpx;
  top: 32rpx;
}

.actionRequire>.actionName {
  color: #666666;
  letter-spacing: 2rpx;
  font-size: 26rpx;
  text-align: center;
  margin-bottom: 24rpx;
}
.actionMsg {
  background: #f9f9f9;
  padding: 0 30rpx 20rpx;
}
.actionMsg>.actionBg {
 background: #fff;
 margin-bottom: 24rpx;
 border-radius: 16rpx;
}
.actionMsg>.actionBg:last-child {
  margin-bottom: 0;
 }
.actionMsg>.actionBg>.actionMsgOne{
  height: 100rpx;
  padding-left: 20rpx;
  font-size: 26rpx;
  color: #999999;
  letter-spacing: 2rpx;
}
.actionMsg>.actionBg>.actionMsgOne>text:first-child{
  width: 180rpx;
}
.actionMsg>.actionBg>.actionMsgOne>text:last-child{
  color: #333333;
}
.borderB2 {
  border-bottom: 2rpx solid #f9f9f9;
}