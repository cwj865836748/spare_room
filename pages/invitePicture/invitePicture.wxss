/* pages/invitePicture/invitePicture.wxss */
.inviteBg {
  width: 750rpx;
  height: 1448rpx;
  position: relative;
  padding-top: 194rpx;
}

.inviteBg>.inviteImg {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
}

.avatr {
  width: 100rpx;
  height: 100rpx;
  position: relative;
  margin: 0 0 140rpx 100rpx;
}

.avatr>image {
  width: 100%;
  height: 100%;
}

.recommendInvite {
  height: 96rpx;
  background: #ffffff;
  box-shadow: 0rpx -2rpx 0rpx 0rpx #f8f8f8;
  width: 100%;
  color: #333333;
  letter-spacing: 2rpx;
  font-size: 32rpx;
  position: fixed;
  left: 0;
  bottom: 0;
}

.disCount {
  font-family: 'YouSheBiaoTiHei', 'YouSheBiaoTiHei-Regular';
  font-weight: bold;
  color: #7A21A8;
  letter-spacing: 1px;
  margin-left: 536rpx;
  position: relative;
  width: 138rpx;
  text-align: center;
  white-space: nowrap;

}

.codePic {
  width: 292rpx;
  height: 292rpx;
  margin: 264rpx 0 0 226rpx;
  position: relative;
}

.recommendInvite::before {
  content: '';
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 2rpx;
  height: 40rpx;
  background: #aaaaaa;

}

button {
  background: none;
  color: #333333;
  font-size: 32rpx;
  letter-spacing: 1rpx;
  border: none;
}

button::after {
  border: none;
}