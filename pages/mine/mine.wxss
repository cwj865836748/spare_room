  width: 216rpx;
  height: 216rpx;
  border-radius: 50%;
  margin-bottom: 18rpx;
  overflow: hidden;
}


.mineHead>.mineAvatar>image {
  width: 100%;
  height: 100%;
}

.mineHead>.mineLevel {
  position: absolute;
  bottom: 26rpx;
}


