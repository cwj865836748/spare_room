  width: 344rpx;
  height: 123rpx;
}

.mineHead>.mineLevel>.line2 {
  width: 349rpx;
  height: 332rpx;
}

.mineHead>.mineLevel>.user {
  width: 20rpx;
  height: 22rpx;
  position: absolute;
  top: 47%;
  left: 33%;

}

.mineHead>.mineLevel>.qingTong {
  width: 22rpx;
  height: 22rpx;
  position: absolute;
  top: 47%;
  left: 33%;

}

.mineHead>.mineLevel>.baiYing {
  width: 22rpx;
  height: 26rpx;
  position: absolute;
  top: 46%;
