}

.mineHead>.mineLevel>.gold {
  width: 25rpx;
  height: 18rpx;
  position: absolute;
  top: 49%;
  left: 32%;
}

.mineHead>.mineLevel>.baiJing {
  width: 22rpx;
  height: 18rpx;
