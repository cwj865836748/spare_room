.mineHead>.mineLevel>.goldName {
  font-size: 22rpx;
  color: #ffffff;
  letter-spacing: 1rpx;
  position: absolute;
  top: 45%;
  left: 40%;
}

.mineHead>.mineLevel>.goldName2 {
  font-size: 22rpx;
  color: #ffffff;
  letter-spacing: 1rpx;
