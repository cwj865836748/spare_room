/* pages/order/order.wxss */
@import "/components/noData/noData.wxss";

.scrollHead {
  position: fixed;
  left: 0;
  z-index: 2;
  background: #fff;
}

.orderControl {
  height: 100rpx;
}

.orderControl>.orderStatus {
  color: #666666;
  letter-spacing: 1rpx;
  margin-right: 60rpx;
  white-space: nowrap;
}

.orderControl>.orderStatus:first-child {
  margin-left: 30rpx;
}

.orderControl>.orderStatus:last-child {
  margin-right: 30rpx;
}

.orderStatusActive {
  font-size: 30rpx;
  color: #333333 !important;
  letter-spacing: 1rpx;
  position: relative;
}

.orderStatusActive::after {
  content: '';
  position: absolute;
  bottom: -20rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 24rpx;
  height: 8rpx;
  background: #780acc;
  border-radius: 4rpx;
}

.orderList {
  padding: 24rpx 30rpx 52rpx;
}

.orderDetail {

  /* height: 514rpx; */
  background: #ffffff;
  border-radius: 16rpx;
  padding: 28rpx 30rpx 30rpx;
  margin-bottom: 16rpx;
}

.orderDetail:last-child {
  margin-bottom: 0rpx;
}

.orderDetail>.orderNumber {
  margin-bottom: 28rpx;
}

.orderDetail>.orderNumber>text:first-child {
  font-size: 24rpx;
  color: #999999;
}

.purpleSize {
  color: #780acc;
  letter-spacing: 1rpx;
}

.greySize {
  color: #666666;
  letter-spacing: 1rpx;
}

.greenSize {
  color: #147e00;
  letter-spacing: 1rpx;
}

.redSize {
  color: #C12306;
  letter-spacing: 1rpx;
}

.twoStatus {
  position: relative;
  margin-left: 26rpx;
}

.twoStatus::before {
  content: '';
  position: absolute;
  width: 2rpx;
  height: 28rpx;
  background: #aaaaaa;
  top: 6rpx;
  left: -16rpx;
}

.orderDetail>.orderCenter>.hotelPic {
  width: 200rpx;
  height: 266rpx;
  margin-right: 24rpx;
  border-radius: 8rpx;
  min-width: 200rpx;

}

.orderDetail>.orderCenter>.hotelMsg>view:first-child {
  font-size: 30rpx;
  color: #333333;
  letter-spacing: 1rpx;
  margin-bottom: 16rpx;
}

.orderDetail>.orderCenter>.hotelMsg>view:nth-child(2) {
  font-size: 26rpx;
  color: #888888;
  letter-spacing: 1rpx;
  margin-bottom: 12rpx;
}

.orderDetail>.orderCenter>.hotelMsg>view:nth-child(-n+4):nth-child(n+3) {
  font-size: 24rpx;
  color: #bbbbbb;
  letter-spacing: 1rpx;
  margin-bottom: 12rpx;
}

.orderDetail>.orderCenter>.hotelMsg>view:nth-child(n+5):nth-child(-n+6) {
  font-size: 26rpx;
  color: #666666;
  margin-bottom: 8rpx;
}

.feeIcon {
  font-size: 24rpx;
  color: #333333;
}

.feeIconPrice {
  font-size: 40rpx;
  letter-spacing: 1rpx;
  color: #333333;
  font-weight: bold;
}

.orderDetail>.orderBottom>.orderTime {
  color: #333333;
  letter-spacing: 1rpx;
  margin-right: 14rpx;
  white-space: nowrap;
  flex-grow: 1;
  font-size: 24rpx;
}

.orderDetail>.orderBottom>.orderTime>image {
  width: 56rpx;
  height: 56rpx;
}

.orderDetail>.orderBottom>.orderBtn>view,
.concatBtn {
  border-radius: 8rpx;
  width: 188rpx;
  height: 72rpx;
  color: #707070;
  letter-spacing: 1rpx;
  border: 2rpx solid #707070;
  font-size: 28rpx !important;
}

.orderDetail>.orderBottom>.orderBtn>view {
  margin-right: 24rpx;
}

.orderDetail>.orderBottom>.orderBtn>view:nth-child(3n) {
  margin-right: 0rpx;
}

.orderDetail>.orderBottom>.orderBtn>view:nth-child(n+4) {
  margin-top: 24rpx;
}

.purpleBtn {
  background: #7a0dcb;
  border: none !important;
  color: #ffffff !important;
  letter-spacing: 1rpx;
}

.pinkBtn,
.pinkBtn>button {
  background: #f7ebff;
  border: none !important;
  color: #7a0dcb !important;
  letter-spacing: 1rpx;
  font-size: 28rpx;
}

.cancelOrder {
  height: 146rpx;
  font-size: 28rpx;
  letter-spacing: 1rpx;
  color: #333333;
}

.redCircle {
  position: relative;
}

.redCircle::after {
  content: "";
  position: absolute;
  right: -4rpx;
  top: -8rpx;
  width: 16rpx;
  height: 16rpx;
  background: #c12306;
  border-radius: 50%;
}