/* pages/hotelSearch/hotelSearch.wxss */
 .keyWord {
  height: 60px;
  padding: 13px 15px;
  box-shadow: 0px 2px 6px 0rpx rgba(0,0,0,0.06); 
  position: fixed;
  left: 0;
  width: 100%;
  z-index: 2;
  background-color: #fff;
  
}
 .keyWord>.search {
  background: #f9f9f9;
  border-radius: 17px;
  padding: 0 13px;
  height: 100%;
  width: 100%;
  color: #aaaaaa;
 letter-spacing: 1rpx;
 font-size: 12px;
 font-weight: bold;
 position: relative;
}
.keyWord>.search>.select {
    width: 100%;
    background: #ffffff;
    border-radius: 8rpx;
    box-shadow: 0rpx 6rpx 12rpx 0rpx rgba(0, 0, 0, 0.09);
    position: absolute;
    top: 36px;
    left: 0;
    padding: 24rpx 34rpx 28rpx 38rpx;
    font-size: 26rpx;
    color: #333333;
    letter-spacing: 2rpx;
    overflow: auto;
    height: 280rpx;
}
.keyWord>.search>.select>view {
  margin-bottom: 34rpx;
}
.keyWord>.search>.select>view:last-child {
  margin-bottom: 0rpx;
}
 .keyWord>view>image {
  height: 24px;
  width: 24px;
  margin-right: 10px;
}
.keyContent {
  width: 100%;
  padding: 19px 15px 0;
  margin-top: 60px;
  /* overflow: auto; */

}
.keyContent .title {
  padding-bottom: 31px;
  box-sizing: content-box;
}
.keyContent .title>.head {
  height: 38px;
  width: 100%;
  border-bottom: 1px solid #f6f6f6;
  padding-bottom:6px;
  justify-content: space-between;
  color: #34244f;
  letter-spacing: 1rpx;
  font-size: 14px;
  font-weight: bold;
  position: relative;
}

.keyContent .title>.head>view>.purple {
  color: #780acc;
  letter-spacing: 1rpx;  
}
.keyContent .title>.head>view>image:first-child {
  height: 32px;
  width: 32px;
}
.keyContent .title>.head>view>image:last-child {
  height: 6px;
  width: 11px;
  margin-left:6px;

}
.keyContent .title>.center {
  padding-top:15px;
  display: flex;
  flex-wrap: wrap;
  margin-bottom: -12px;
  height: auto;
}
.keyContent .title>.center>.name {
 padding: 0 16px;
 height: 34px;
 background: #ffffff;
 border: 2rpx solid #cccccc;
 border-radius: 17px;
 text-align: center;
color: #aaaaaa;
letter-spacing: 1rpx;
font-size: 12px;
margin-right: 10px;
line-height:  34px;
margin-bottom:12px;
}
.keyContent .title>.center>.hotKeyWord {
 
 background: #f8f8f8;
 color: #333333;
 border:none;
}
