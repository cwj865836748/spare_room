/* pages/hotelPicture/hotelPicture.wxss */
@import "/components/noData/noData.wxss";
.myScroll {
  padding:0 30rpx;
  box-shadow: 0rpx 4rpx 12rpx 0rpx rgba(0,0,0,0.06); 
  position: fixed;
  z-index: 2;
  background: #fff;
  left: 0;
}
.picTitle {
  height: 120rpx;
  background: #ffffff;
  
  box-sizing: content-box;
  white-space: nowrap;

}
.picTitle>view {
padding: 0rpx 30rpx;
box-sizing: content-box;
height: 64rpx;
line-height: 64rpx;
background: #ffffff;
border: 2rpx solid #666666;
border-radius: 32rpx;
font-size: 24rpx;
color: #666666;
letter-spacing: 1rpx;
margin: 28rpx 22rpx 0 0;
display: inline-block;
}
.picTitle>view:last-child {
  margin-right: 0;
}
.picList {
  padding: 150rpx 30rpx 30rpx;
}
.picList>.picView {
  height: 388rpx;
  width: 100%;
  margin-bottom: 26rpx;
  border-radius: 8rpx;
  overflow: hidden;
}
.picList>.picView:last-child {
  margin-bottom: 0;
}
.picList>.picView>image {
  height: 100%;
  width: 100%;
}
.picList>.picView>.picMen {
  width: 220rpx;
  height: 56rpx;
  background: rgba(0, 0, 0,.6);
  border-radius: 28rpx;
  color: #ffffff;
  font-size: 26rpx;
  font-weight: bold;
  position: absolute;
  right: 0;
  bottom: 20rpx;
}
.picList>.picView>.picMen>.opacity {
  opacity: 0.7;
}
.picList>.picView>.picMen>.opacity>image {
 width: 30rpx;
 height: 30rpx;
 margin-right: 6rpx;

}
.picList>.picView>.picMen>.opacity>text {
 color:(255,255,255,.6);
 font-weight:normal;
 }
.purple {
  background: #780acc !important;
  color: #ffffff !important;
  border:none !important;
}