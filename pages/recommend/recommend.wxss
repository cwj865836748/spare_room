.cardMember {
  width: 100%;
  /* height: 100%; */
  position: relative;
  padding: 36rpx 20rpx 0 30rpx;
  /* box-shadow: 0rpx 8rpx 16rpx 0rpx rgba(0, 0, 0, 0.17); */

}

.cardMember>.slide-image {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  z-index: -1;
}

.cardMember>.cardMemberName {
  padding-left: 120rpx;
  color: #ffffff;
  letter-spacing: 1rpx;
  font-size: 36rpx;
  font-weight: bold;
  white-space: nowrap;
}

.cardMember>.cardMemberName>view:nth-child(2) {
  margin: 0 12rpx;
  width: 142rpx;
  height: 46rpx;
  border-radius: 24rpx;
  box-shadow: 0rpx 6rpx 12rpx 0rpx rgba(0, 0, 0, 0.12);
  font-size: 22rpx;
  color: #ffffff;
  letter-spacing: 1rpx;
}

.cardMember>.cardMemberName>view:nth-child(2)>image {
  width: 21rpx;
  height: 20rpx;
  margin-right: 4rpx;
  margin-top: 4rpx;

}

.cardMember>.cardMemberName>view:nth-child(3) {
  font-size: 22rpx;
  text-align: center;
  color: #ffffff;
  letter-spacing: 1rpx;
}

.zoom-out {
  transform: scale(0.95);
  transition: all 0.7s ease-out 0s;
}

.zoom-in {
  transform: scale(1);
  transition: all 0.7s ease-in 0s;
}

.cardAvatr>open-data {
