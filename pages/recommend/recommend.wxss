.recommendInvite {
  height: 96rpx;
  background: #ffffff;
  box-shadow: 0rpx -2rpx 0rpx 0rpx #f8f8f8;
  width: 100%;
  color: #333333;
  letter-spacing: 2rpx;
  font-size: 32rpx;
  position: fixed;
  left: 0;
  bottom: 0;
}

.recommendInvite::before {
  content: '';
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 2rpx;
  height: 40rpx;
  background: #aaaaaa;

}

