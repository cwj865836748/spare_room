  letter-spacing: 1rpx;
  white-space: nowrap;
}

.cardAvatr>.cardLine>.cardLineLevel>.cardLineStatus>text:last-child {
  font-size: 24rpx;
  letter-spacing: 1rpx;
  color: rgba(255, 255, 255, 0.5);
