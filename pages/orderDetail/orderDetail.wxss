/* pages/orderDetail/orderDetail.wxss */
@import '/components/jumpService/jumpService.wxss';
@import "../../wxParse/wxParse.wxss";
@import "/components/roomDetail/roomDetail.wxss";
.orderDetail {
  padding: 204rpx 30rpx 62rpx;
  background: #F9F9F9;
}

.orderDetailBg {
  width: 750rpx;
  height: 620rpx;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 1;
}

.orderStatus {
  font-size: 40rpx;
  color: #ffffff;
  letter-spacing: 1rpx;
  font-weight: bold;
  margin-bottom: 24rpx;
  z-index: 2;
  position: relative;
}

.orderStatus>image {
  width: 36rpx;
  height: 36rpx;
  margin-left: 10rpx;
}

.orderStatus>text:nth-child(2) {
  position: relative;
  margin-left: 42rpx;
}

.orderStatus>text:nth-child(2)::before {
  content: '';
  width: 2rpx;
  height: 36rpx;
  background: #e8e8e8;
  position: absolute;
  top: 10rpx;
  left: -24rpx;
}

.greenSize {
  color: #45fc20;
  letter-spacing: 1rpx;
  font-weight: bold;
}

.redSize {
  color: #ff5738;
  letter-spacing: 1rpx;
  font-weight: bold;
}
.purpleSize {
  color: #ffffff;
  letter-spacing: 1rpx;
  font-weight: bold;
}

.orderShow {
  background: #ffffff;
  border-radius: 8rpx;
  box-shadow: 0rpx 6rpx 20rpx 0rpx rgba(77, 0, 168, 0.06);
  padding: 40rpx 0 30rpx 36rpx;
  z-index: 2;
  position: relative;
}

.orderShow>.orderTitle {
  color: #333333;
  letter-spacing: 1rpx;
  margin-bottom: 30rpx;
}

.orderShow>.orderTitle>view {
  margin-left: 20rpx;
  color: #c12306;
}

.orderShow>.orderBtn>.orderBtn_pay {
  width: 336rpx;
  height: 72rpx;
  border: 2rpx solid #7a0dcb;
  border-radius: 8rpx;
  padding: 0 32rpx 0 20rpx;
}

.orderShow>.orderBtn>.orderBtn_pay>text {
  color: #7a0dcb;
  letter-spacing: 1rpx;
  white-space: nowrap;
  position: relative;
}

.orderShow>.orderBtn>.orderBtn_pay>text::after {
  content: '';
  width: 2rpx;
  height: 28rpx;
  background: #9651c9;
  position: absolute;
  right: -16rpx;
  top: 4rpx;
}

.orderShow>.orderBtn>.orderBtn_pay>view {
  color: #c12306;
  letter-spacing: 1rpx;
  white-space: nowrap;
}
.van-count-down {
  color: #c12306 !important;
  padding-top: 4rpx !important;

}

.orderShow>.orderBtn>.cancleOrderBtn {
  width: 188rpx;
  height: 72rpx;
  border: 2rpx solid #707070;
  border-radius: 8rpx;
  color: #707070;
  letter-spacing: 1rpx;
}

.orderShow>.orderBtn>.evaluationBtn {
  width: 188rpx;
  height: 72rpx;
  background: #f7ebff;
  border-radius: 8rpx;
  color: #7a0dcb;
  letter-spacing: 1rpx;
  font-size: 28rpx;
}

.orderShow>.orderBtn>.appealBtn {
  width: 188rpx;
  height: 72rpx;
  background: #7a0dcb;
  border-radius: 8rpx;
  color: #ffffff;
  letter-spacing: 1rpx;
}

.orderShow>.orderBtn>.appealBtnForApp {
  width: 188rpx;
  height: 72rpx;
  background: #ffffff;
  border: 2rpx solid #7a0dcb;
  border-radius: 8rpx;
  color: #7a0dcb;
  letter-spacing: 1rpx;
}
.redCircle {
  position: relative;
}
.redCircle::after {
  content: "";
  position: absolute;
  right: -4rpx;
  top: -8rpx;
  width: 16rpx;
  height: 16rpx;
  background: #c12306;
  border-radius: 50%;
}

.orderShow>.orderBtn>view,navigator {
  margin-right: 24rpx;
}

.orderShow>.orderBtn>view:last-child {
  margin-right: 0;
}

.orderShow>.orderBtn>view:nth-child(4) {
  margin-top: 24rpx;
}

.orderHotel>.hotelName {
  height: 260rpx;
  width: 100%;
  background: #ffffff;
  border-radius: 8rpx;
  box-shadow: 0rpx 6rpx 20rpx 0rpx rgba(77, 0, 168, 0.06);
  margin-top: 20rpx;
  padding: 30rpx;
  position: relative;
  z-index: 1;
}

.orderHotel>.hotelName>.hotelImage {
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
}

.orderHotel>.hotelName>.hotelImage>image {
  width: 100%;
  height: 100%;
}

.orderHotel>.hotelName>.nameDetail {
  width: calc(100% - 200rpx);
}

.orderHotel>.hotelName>.nameDetail>view:first-child {
  font-size: 34rpx;
  color: #333333;
  letter-spacing: 1rpx;
}

.orderHotel>.hotelName>.nameDetail>view:last-child {
  font-size: 26rpx;
  color: #999999;
  margin-top: 8rpx;
}

.orderHotel>.hotelAddress {
  background: #ffffff;
  border-radius: 0rpx 0rpx 8rpx 8rpx;
  padding: 22rpx 26rpx 20rpx;
  color: #999999;
  font-size: 26rpx;
  margin: 0 22rpx 0 20rpx;

}

.orderHotel>.hotelAddress>image {
  margin-left: 16rpx;
  width: 27rpx;
  height: 28rpx;
}

.orderTime {
  height: 412rpx;
  background: #ffffff;
  border-radius: 8rpx;
  box-shadow: 0rpx 6rpx 20rpx 0rpx rgba(77, 0, 168, 0.06);
  padding: 32rpx 0 28rpx;
  margin-top: 24rpx;
}

.orderTime>.orderDate {
  padding-left: 30rpx;
}

.orderTime>.orderDate>.monthAndWeek>text:first-child {
  color: #780acc;
  letter-spacing: 1rpx;
  margin-right: 4rpx;
}

.orderTime>.orderDate>.monthAndWeek>text:last-child {
  color: #333333;
  letter-spacing: 1rpx;
}

.orderTime>.orderDate>.allDays {
  padding: 6rpx 16rpx 6rpx 18rpx;
  border: 2rpx solid #aaaaaa;
  border-radius: 24rpx;
  font-size: 24rpx;
  color: #aaaaaa;
  margin: 0 42rpx;
}

.orderTime>.roomType {
  padding: 30rpx 30rpx 26rpx;
  color: #333333;
  letter-spacing: 1rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.orderTime>.roomType>.roomTypeDetail {
  color: #666666;
  font-size: 26rpx;
}

.orderTime>.roomType>.roomTypeDetail>image {
  width: 31rpx;
  height: 31rpx;
  margin-left: 8rpx;
}

.orderAbout {
  height: 100rpx;
  background: rgba(249, 249, 249, 0);
  border-bottom: 2rpx solid #f9f9f9;
  padding-left: 30rpx;
  font-size: 26rpx;
  color: #999999;
  letter-spacing: 2rpx;
  font-weight: bold;
}

.orderAbout>text:last-child {
  color: #333333;
  letter-spacing: 2rpx;
  margin-left: 42rpx;
}

.aboutInvoice {
  height: 100rpx;
  background: #ffffff;
  border-radius: 8rpx;
  padding: 0 20rpx 0 30rpx;
  margin: 20rpx 0;
  color: #333333;
  letter-spacing: 2rpx;
  font-weight: bold;
  position: relative;
  
}
.aboutInvoiceSize {
  letter-spacing: 1rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.aboutInvoice::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 24rpx;
  background: #780acc;
  border-radius: 4rpx;
}

.aboutInvoice>.noInvoice {
  font-size: 26rpx;
}

.aboutInvoice>.noInvoice>image {
  width: 13rpx;
  height: 23rpx;
  margin-left: 25rpx;
}

.fee {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 26rpx 30rpx;
}

.feeDetail {
  padding-bottom: 36rpx;
  border-bottom: 2rpx #f2f2f2 solid;
}

.feeDetail>view {
  margin-bottom: 24rpx;
}

.feeDetail>view:last-child {
  margin-bottom: 0rpx;
}

.feeTitle {
  color: #333333;
  letter-spacing: 1rpx;
  font-size: 32rpx;
  font-weight: bold;
  position: relative;
  margin-bottom: 28rpx;
}

.feeTitle:first-child::before {
  content: '';
  width: 8rpx;
  height: 24rpx;
  background: #780acc;
  border-radius: 4rpx;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  left: -30rpx;
}

.feeTitleDetailSize1 {
  font-size: 26rpx;
  color: #333333;
  letter-spacing: 1rpx;
}

.feeTitleDetailSize2 {
  font-size: 26rpx;
  color: #666666;
  letter-spacing: 1rpx;
}

.feeTitleDetailSize3 {
  font-size: 30rpx;
  color: #333333;
  letter-spacing: 1rpx
}

.feeTitleDetailSize4 {
  font-size: 30rpx;
  color: #ffbc00;
  letter-spacing: 1rpx;
}

.feeTitleDetailSize5 {
  font-size: 30rpx;
  color: #666666;
  letter-spacing: 1rpx;
}

.feeTitleDetailSize6 {
  color: #e3311a;
  font-size: 24rpx;
}

.feeTitleDetailSize7 {
  color: #e3311a;
  font-size: 40rpx;
  letter-spacing: 1rpx;
  font-weight: bold;
}

.questionIcon {
  margin-left: 9rpx;
  width: 29rpx;
  height: 29rpx;
}

.feeCoupon {
  padding: 34rpx 0 30rpx;
  border-bottom: 2rpx #f2f2f2 solid;
}

.feeCoupon>view:first-child {
  margin-bottom: 26rpx;
}

.allPrice {
  padding-top: 26rpx;
}

.cancelOrder {
  height: 146rpx;
  letter-spacing: 1rpx;
  color: #333333;
  font-size: 28rpx;
}


.detailStepTitle {
  padding: 22rpx 0 42rpx;
  font-size: 32rpx;
  color: #333333;
  text-align: center;
  position: relative;
}

.detailStepTitle>image {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  right: 32rpx;
  top: 32rpx;
}

.detailStep {
  padding: 28rpx 60rpx;
}

.stepOne>.stepTime {
  margin-top: -26rpx;
}

.stepOne>.stepTime>view:first-child {
  letter-spacing: 2rpx;
  color: #333333;
  font-size: 28rpx;
}

.stepOne>.stepTime>view:last-child {
  font-size: 24rpx;
  color: rgba(170, 170, 170, 1);
  letter-spacing: 2rpx;
  text-align: center;
}

.stepOne>.stepContent {
  margin-left: 30rpx;
  height: 144rpx;
  border-left: 4rpx solid#f7ebff;
  padding-left: 31rpx;
  position: relative;
}

.stepOne>.stepContent>text {
  position: absolute;
  top: -10rpx;
  white-space: nowrap;

}

.stepOne>.stepContent::before {
  content: '';
  position: absolute;
  left: -10rpx;
  top: 0;
  width: 16rpx;
  height: 16rpx;
  background: #ba7ee5;
  border-radius: 50%;
}

.feeExpolre {
  padding:36rpx 50rpx 50rpx 52rpx;
  position: relative;
}
.feeExpolre>image {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  top: 28rpx;
  right: 28rpx;
}
.feeExpolreTitle {
  color: #333333;
  letter-spacing: 1rpx;
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 44rpx;
}
.feeExpolreContent {
  letter-spacing: 1rpx;
  color: #333333;
  line-height: 46rpx;
  font-size: 28rpx;

}